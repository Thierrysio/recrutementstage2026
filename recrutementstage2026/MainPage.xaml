<?xml version="1.0" encoding="utf-8" ?>
<!-- =============================================================================
     ATELIER SELENIUM - INTERFACE PRINCIPALE
     =============================================================================
     Cette interface contient 3 onglets pour les 3 activités de l'atelier.
     Les lycéens peuvent personnaliser les textes et ajouter de nouveaux boutons.
     ============================================================================= -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="recrutementstage2026.MainPage"
             Title="Atelier Selenium - Automatisation Web"
             BackgroundColor="#2c3e50">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- TITRE PRINCIPAL -->
            <VerticalStackLayout Padding="20" BackgroundColor="#34495e">
                <Label Text="Atelier Selenium"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#3498db"
                       HorizontalOptions="Center"/>
                <Label Text="Automatisation de Navigateur Web"
                       FontSize="16"
                       TextColor="#ecf0f1"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- BOUTONS D'ONGLETS -->
            <HorizontalStackLayout Spacing="5"
                                   HorizontalOptions="Center"
                                   Padding="10"
                                   BackgroundColor="#34495e">
                <Button x:Name="BtnOnglet1"
                        Text="Activité 1"
                        Clicked="OnOnglet1Clicked"
                        BackgroundColor="#3498db"
                        TextColor="White"
                        CornerRadius="5"
                        HeightRequest="40"/>
                <Button x:Name="BtnOnglet2"
                        Text="Activité 2"
                        Clicked="OnOnglet2Clicked"
                        BackgroundColor="#7f8c8d"
                        TextColor="White"
                        CornerRadius="5"
                        HeightRequest="40"/>
                <Button x:Name="BtnOnglet3"
                        Text="Activité 3"
                        Clicked="OnOnglet3Clicked"
                        BackgroundColor="#7f8c8d"
                        TextColor="White"
                        CornerRadius="5"
                        HeightRequest="40"/>
            </HorizontalStackLayout>

            <!-- =========================================================
                 ACTIVITÉ 1 : PERSONNALISATION (20 min)
                 ========================================================= -->
            <VerticalStackLayout x:Name="Onglet1"
                                 IsVisible="True"
                                 Padding="20"
                                 Spacing="20">

                <!-- Section Recherche Google -->
                <Frame BackgroundColor="#34495e" CornerRadius="10" Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="RECHERCHE GOOGLE"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#3498db"/>

                        <Label Text="Texte à rechercher :"
                               TextColor="#ecf0f1"/>
                        <Entry x:Name="EntryRecherche"
                               Placeholder="Entrez votre recherche..."
                               Text="Programmation C#"
                               BackgroundColor="#ecf0f1"
                               TextColor="#2c3e50"/>

                        <Button Text="Lancer la recherche"
                                Clicked="OnRechercheClicked"
                                BackgroundColor="#27ae60"
                                TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Section Météo -->
                <Frame BackgroundColor="#34495e" CornerRadius="10" Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="MÉTÉO"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#e74c3c"/>

                        <Label Text="Votre ville :"
                               TextColor="#ecf0f1"/>
                        <Entry x:Name="EntryVille"
                               Placeholder="Entrez votre ville..."
                               Text="Paris"
                               BackgroundColor="#ecf0f1"
                               TextColor="#2c3e50"/>

                        <Button Text="Voir la météo"
                                Clicked="OnMeteoClicked"
                                BackgroundColor="#e74c3c"
                                TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Instructions -->
                <Frame BackgroundColor="#1abc9c" CornerRadius="10" Padding="15">
                    <VerticalStackLayout>
                        <Label Text="INSTRUCTIONS ACTIVITÉ 1"
                               FontAttributes="Bold"
                               TextColor="White"/>
                        <Label Text="1. Modifiez le texte de recherche par défaut dans SeleniumService.cs (ligne 35)"
                               TextColor="White"/>
                        <Label Text="2. Remplacez 'Paris' par votre ville (ligne 40)"
                               TextColor="White"/>
                        <Label Text="3. Testez les boutons pour voir le résultat !"
                               TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>

            <!-- =========================================================
                 ACTIVITÉ 2 : CINÉMA ET RESTAURANTS (25 min)
                 ========================================================= -->
            <VerticalStackLayout x:Name="Onglet2"
                                 IsVisible="False"
                                 Padding="20"
                                 Spacing="20">

                <!-- Recherche locale -->
                <Frame BackgroundColor="#34495e" CornerRadius="10" Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="RECHERCHE LOCALE"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#9b59b6"/>

                        <Label Text="Ville :"
                               TextColor="#ecf0f1"/>
                        <Entry x:Name="EntryVilleLocale"
                               Placeholder="Entrez votre ville..."
                               Text="Paris"
                               BackgroundColor="#ecf0f1"
                               TextColor="#2c3e50"/>

                        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                            <Button Text="Horaires Cinéma"
                                    Clicked="OnCinemaClicked"
                                    BackgroundColor="#9b59b6"
                                    TextColor="White"/>
                            <Button Text="Restaurants"
                                    Clicked="OnRestaurantsClicked"
                                    BackgroundColor="#e67e22"
                                    TextColor="White"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Recherche personnalisée -->
                <Frame BackgroundColor="#34495e" CornerRadius="10" Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="RECHERCHE PERSONNALISÉE"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#f39c12"/>

                        <Label Text="Type de lieu :"
                               TextColor="#ecf0f1"/>
                        <Entry x:Name="EntryTypeLieu"
                               Placeholder="pizzeria, bowling, escape game..."
                               Text="pizzeria"
                               BackgroundColor="#ecf0f1"
                               TextColor="#2c3e50"/>

                        <Button Text="Rechercher"
                                Clicked="OnRecherchePersonnaliseeClicked"
                                BackgroundColor="#f39c12"
                                TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Instructions -->
                <Frame BackgroundColor="#1abc9c" CornerRadius="10" Padding="15">
                    <VerticalStackLayout>
                        <Label Text="DÉFI ACTIVITÉ 2"
                               FontAttributes="Bold"
                               TextColor="White"/>
                        <Label Text="Ajoutez un nouveau bouton dans le code !"
                               TextColor="White"/>
                        <Label Text="Idées : Bowling, Escape Game, Piscine, Karaoké..."
                               TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>

            <!-- =========================================================
                 ACTIVITÉ 3 : CHALLENGE (20 min)
                 ========================================================= -->
            <VerticalStackLayout x:Name="Onglet3"
                                 IsVisible="False"
                                 Padding="20"
                                 Spacing="15">

                <!-- YouTube Tendances -->
                <Frame BackgroundColor="#34495e" CornerRadius="10" Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="YOUTUBE - TENDANCES"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#e74c3c"/>
                        <Button Text="Voir les tendances YouTube"
                                Clicked="OnYouTubeClicked"
                                BackgroundColor="#e74c3c"
                                TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Vérification produit -->
                <Frame BackgroundColor="#34495e" CornerRadius="10" Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="VÉRIFICATION PRODUIT"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#f39c12"/>
                        <Entry x:Name="EntryProduit"
                               Placeholder="Nom du produit..."
                               Text="iPhone 15"
                               BackgroundColor="#ecf0f1"
                               TextColor="#2c3e50"/>
                        <Button Text="Vérifier sur Amazon"
                                Clicked="OnProduitClicked"
                                BackgroundColor="#f39c12"
                                TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Actualités -->
                <Frame BackgroundColor="#34495e" CornerRadius="10" Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="ACTUALITÉS"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#3498db"/>
                        <Entry x:Name="EntryActu"
                               Placeholder="Sujet d'actualité..."
                               Text="technologie"
                               BackgroundColor="#ecf0f1"
                               TextColor="#2c3e50"/>
                        <Button Text="Rechercher actualités"
                                Clicked="OnActuClicked"
                                BackgroundColor="#3498db"
                                TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Wikipedia -->
                <Frame BackgroundColor="#34495e" CornerRadius="10" Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="WIKIPEDIA"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#27ae60"/>
                        <Entry x:Name="EntryWiki"
                               Placeholder="Article Wikipedia..."
                               Text="Intelligence artificielle"
                               BackgroundColor="#ecf0f1"
                               TextColor="#2c3e50"/>
                        <Button Text="Rechercher sur Wikipedia"
                                Clicked="OnWikiClicked"
                                BackgroundColor="#27ae60"
                                TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Instructions Challenge -->
                <Frame BackgroundColor="#9b59b6" CornerRadius="10" Padding="15">
                    <VerticalStackLayout>
                        <Label Text="CHALLENGE POUR LES GROUPES"
                               FontAttributes="Bold"
                               TextColor="White"/>
                        <Label Text="- Récupérer les titres des vidéos tendances"
                               TextColor="White"/>
                        <Label Text="- Afficher le prix des produits trouvés"
                               TextColor="White"/>
                        <Label Text="- Créer une alerte pour un mot-clé"
                               TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>

            <!-- BOUTON FERMER NAVIGATEUR -->
            <Button x:Name="BtnFermer"
                    Text="Fermer le navigateur"
                    Clicked="OnFermerClicked"
                    BackgroundColor="#95a5a6"
                    TextColor="White"
                    Margin="20,10"/>

            <!-- ZONE DE LOGS -->
            <Frame BackgroundColor="#1e272e"
                   CornerRadius="10"
                   Margin="10"
                   Padding="10"
                   HeightRequest="150">
                <VerticalStackLayout>
                    <Label Text="Journal d'activité"
                           FontAttributes="Bold"
                           TextColor="#00ff00"
                           Margin="0,0,0,5"/>
                    <ScrollView x:Name="LogScrollView" HeightRequest="100">
                        <Label x:Name="LabelLogs"
                               Text="[Prêt] Application démarrée. Cliquez sur un bouton pour commencer..."
                               TextColor="#00ff00"
                               FontFamily="Consolas"
                               FontSize="12"/>
                    </ScrollView>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
